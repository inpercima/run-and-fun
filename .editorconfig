# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*.java]
indent_size = 4

[*.md]
max_line_length = off
indent_size = 4

[logback.xml]
indent_size = 4
